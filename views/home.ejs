    <section class="vh-100 gradient-custom-2" >
      <div class="container py-5 h-100" >
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-12 col-xl-10">
            <div class="card mask-custom">
              <div class="card-body p-4 text-white"  style="background-color: rgb(55, 10, 97);">
                <!-- Todo Form -->
                <form class="mx-1 mx-md-4" method="post" action="/">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                
                      <label class="form-label" for="form3Example3c">Product Name</label>
                      <input type="text" id="form3Example3c" class="form-control" name="name"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Image</label>
                      <input type="text" id="form3Example4c" class="form-control" name="image"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">brand</label>
                      <input type="text" id="form3Example4c" class="form-control" name="brand"/>
                    </div>
                  </div>
              
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Category</label>
                      <input type="text" id="form3Example4c" class="form-control" name="category"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Description</label>
                      <input type="text" id="form3Example4c" class="form-control" name="description"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Price</label>
                      <input type="number" id="form3Example4c" class="form-control" name="price"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">CountInStock</label>
                      <input type="number" id="form3Example4c" class="form-control" name="countInStock"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Rating</label>
                      <input type="number" id="form3Example4c" class="form-control" name="rating"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Number of Reviews</label>
                      <input type="number" id="form3Example4c" class="form-control" name="numReviews"/>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                      Create Product
                    </button>
                  </div>
                </form>

                <div class="text-center pt-3 pb-2">
                  <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-todo-list/check1.webp"
                    alt="Check"
                    width="60"
                  />
                  <h2 class="my-4">Product List</h2>
                </div>

                <table class="table text-white mb-0">
                  <thead>
                    <tr>
                      <th scope="col">Name</th>
                      <th scope="col">Image</th>
                      <th scope="col">Brand</th>
                      <th scope="col">Category</th>
                      <th scope="col">Description</th>
                      <th scope="col">Price</th>
                      <th scope="col">CountInStock</th>
                      <th scope="col">Rating</th>
                      <th scope="col">No. Of Views</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>


                    <% if (productlist && productlist.length > 0) { %>
                      <% productlist.forEach((product) => { %>
                        <!-- Render table rows for each product -->
                        <!-- ... (Your existing code) ... -->
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="9">No products found.</td>
                      </tr>
                    <% } %>

                    <% productlist.forEach((product) => { %>
                      <tr class="fw-normal" id = <%= `rowid@${product.id}` %>>
                        <td class="align-middle"><%= product.name %></td>
                        <td class="align-middle"><%= product.image %></td>
                        <td class="align-middle"><%= product.brand %></td>
                        <td class="align-middle"><%= product.category %></td>
                        <td class="align-middle"><%= product.description %></td>
                        <td class="align-middle"><%= product.price %></td>
                        <td class="align-middle"><%= product.countInStock %></td>
                        <td class="align-middle"><%= product.rating %></td>
                        <td class="align-middle"><%= product.numReviews %></td>
                        <td class="align-middle">
                          <!-- <a href="#!" data-mdb-toggle="tooltip" title="Done"> -->
                            <i 
                              data-bs-toggle="modal"
                              data-bs-target="#exampleModel"
                              class="fa fa-pencil fa-lg text-success me-3"
                              style="cursor: pointer;"
                              onclick=handleActionEdit("<%= `rowid@${product.id}` %>") ;
                              ></i>
                          <!-- </a> -->
                          <a href="/<%= product.id %>" 
                            data-mdb-toggle="tooltip" 
                            title="Remove">
                            <i class="fas fa-trash-alt fa-lg text-warning"></i>
                          </a>
                        </td>
                        </tr>


                        <% }) %>
                    
              
                    
                             </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


 
                <!-- The Modal -->
                <div class="modal" id="exampleModel" tabindex="-1">
                  <div class="modal-dialog">
                    <div class="modal-content">

                      <!-- Modal Header -->
                      <div class="modal-header">
                        <h4 class="modal-title">New Products</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>

                      <!-- Modal body -->
                
                      <div class="modal-body">
                      <!-- <form  method = "POST" action="" >  -->
                      <div class="mb-3 mt-3">
                      <label for="fullname">name:</label>
                      <input type="text" class="form-control" id="fullname" placeholder="product name" name="name" >
                    </div>
                      <div class="mb-3 mt-3">
                      <label for="image">image:</label>
                      <input type="text" class="form-control" id="image" placeholder="image link" name="image" >
                    </div>
                    
                    <div class="mb-3 mt-3">
                      <label for="brand">brand:</label>
                      <input type="text" class="form-control" id="brand" placeholder="brand name" name="brand" >
                    </div>
                    <div class="mb-3">
                      <label for="category">category:</label>
                      <input type="text" class="form-control" id="category" placeholder="categories" name="category" >
                    </div>
                      <div class="mb-3 mt-3">
                      <label for="description">description:</label>
                      <input type="text" class="form-control" id="description" placeholder="description" name="description">
                    </div>
                      <div class="mb-3 mt-3">
                      <label for="Price">Price:</label>
                      <input type="number" class="form-control" id="price" placeholder="Product price" name="price" >
                    </div>

                  <div class="mb-3 mt-3">
                      <label for="countInStock">countInStock:</label>
                      <input type="number" class="form-control" id="countInStock" placeholder="countInStock" name="countInStock" >
                    </div>
                    <div class="mb-3 mt-3">
                      <label for="rating">rating:</label>
                      <input type="number" class="form-control" id="rating" placeholder="rating" name="rating">
                    </div>
                    <div class="mb-3 mt-3">
                      <label for="numReviews">numReviews:</label>
                      <input type="number" class="form-control" id="numReviews" placeholder="Number of views" name="numReviews">
                  </div>
                    <button type="submit" class="btn btn-primary" id ="btnUpdate" >Submit</button>
                  <!-- </form> -->
                      </div>

                      <!-- Modal footer -->
                      <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                      </div>

                    </div>
                  </div>
                </div>
          
